<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field='res' type='org.jboss.datavirtualization.client.Resources' />
  <g:HTMLPanel>
    <table style="background-color:#fdfbfb;padding:0px 0px 0px 0px;width:100%;height:100%;">
    <tr><td style="vertical-align:top; horizontal-align:left;">

    <table style="background-color:#fdfbfb;width:100%;height:100%width:100%;vertical-align:top;horizontal-align:left;">

      <!-- Panel Title and Description -->
      <tr><td class='{res.style.titleMedium}'>Manage Data Sources</td></tr>
      <tr><td class='{res.style.titleSmallItalics}'>Manage Data Sources and Drivers</td></tr>

      <!-- VDB Buttons and Table -->
      <tr><td>
          <table align="left">
            <tr>
              <!-- DataSource Buttons -->
              <td style="vertical-align:top">
                <table align="left">
                  <tr><td style="height:25px"></td></tr>
                  <tr><td><g:Button styleName='{res.style.dataSourceButton}' text="New..." ui:field="createSourceButton" /></td></tr>
                  <tr><td><g:Button styleName='{res.style.dataSourceButton}' text="Delete" ui:field="deleteSourceButton" /></td></tr>
                  <tr><td><g:Button styleName='{res.style.dataSourceButton}' text="Edit..." ui:field="editSourceButton" /></td></tr>
                  <tr><td><g:Button styleName='{res.style.dataSourceButton}' text="Copy" ui:field="copySourceButton" /></td></tr>
                  <tr><td><g:Button styleName='{res.style.dataSourceButton}' text="Deploy Samples..." ui:field="createSamplesButton" /></td></tr>
                </table>
              </td>
              <!-- DataSource Table -->
              <td style="vertical-align:top">
                <table align="left" style="padding:0px 0px 0px 0px;">
                  <tr><td class='{res.style.titleMedium}'>Data Sources</td></tr>
                  <tr><td><g:ScrollPanel ui:field="dataSourcesTableScrollPanel" /></td></tr>
                </table>
              </td>
              <!-- Drivers Panel -->
              <td style="padding:0px 0px 0px 50px;"><g:VerticalPanel ui:field="driversPanelContainer" /></td>
            </tr>
          </table>
      </td></tr>
    </table>
    
    </td><td><g:Label ui:field="dummyLabel" /></td></tr>
    </table>

  </g:HTMLPanel>
</ui:UiBinder> 
