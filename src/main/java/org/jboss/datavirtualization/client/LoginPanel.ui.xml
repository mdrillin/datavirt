<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field='res' type='org.jboss.datavirtualization.client.Resources' />
  <g:HTMLPanel>
    <table style="color:#fff;padding:0px 0px 0px 0px;width:100%;height:100%;">
    <tr><td style="vertical-align:top; horizontal-align:left;">

    <table class='{res.style.loginPanel}'>

      <tr><td style="height:5%"></td></tr>
      <tr><td><image src="./images/login-screen-logo.png" style="float:right;padding:0px 50px 0px 0px;"/></td></tr>
      
      <tr><td style="height:40%"></td></tr>
      <tr><td style="padding:0px 0px 0px 100px;"><image src="./images/RH-Product-Name.png" /></td></tr>

      <tr>
        <td style="vertical-align:top; horizontal-align:left;">
        <table style="background-color:rgba(29,34,38,.7);padding:0px 0px 0px 0px;width:100%;vertical-align:top; horizontal-align:left;">
 
          <tr><td style="vertical-align:top; horizontal-align:left;">
           <table style="background-color:rgba(29,34,38,.7);padding:0px 0px 0px 0px;vertical-align:top; horizontal-align:left;">
            <tr style="background-color:rgba(29,34,38,.7);">
              <td class='{res.style.loginLabel}'>Username</td>
              <td><g:TextBox ui:field="adminUsernameTextBox" /></td>
            </tr>
            <tr style="background-color:rgba(29,34,38,.7);">
              <td class='{res.style.loginLabel}'>Password</td>
              <td><g:PasswordTextBox ui:field="adminPasswordTextBox" /></td>
            </tr>
            <tr style="background-color:rgba(29,34,38,.7);">
              <td class='{res.style.loginLabel}'>Admin Port</td>
              <td><g:TextBox ui:field="adminPortTextBox" /></td>
            </tr>
           </table>
          </td></tr>
          
          <tr><td><g:Label ui:field="loginStatusLabel" styleName='{res.style.loginStatus}'/></td></tr>
          <tr><td style="padding:5px 0px 0px 100px;"><g:Button ui:field="loginButton" text="Login" /></td></tr>
       </table>
       </td>
     </tr>
    </table>
    
    </td><td><g:Label ui:field="dummyLabel" /></td></tr>
    </table>

  </g:HTMLPanel>
</ui:UiBinder> 
